<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="name">
        <item name="android:text">Themes In Style</item>
        <item name="android:textColor">#f34567</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:text">Click Me</item>
        <item name="android:color">#f22</item>
        <item name="android:textColor">#f674</item>
    </style>
    <style name="imageview">
        <item name="android:src">@drawable/saye</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">200dp</item>

    </style>
    <style name="layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
